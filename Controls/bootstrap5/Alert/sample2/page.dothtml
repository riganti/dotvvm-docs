<bs:Alert IsDismissible="true">
  Dismissable alert
</bs:Alert>

<bs:Alert IsDismissed="{value: Dismissed}" 
          IsDismissible="true"
          Dismissed="{command: AlertDismissed()}" 
          Text="Click the button" />

<dot:Button Text="Show/Hide" Click="{command: Dismiss()}"/>
<p>
    Dismissed: {{value: Dismissed}}
</p>
<p>{{value: Text}}</p>
